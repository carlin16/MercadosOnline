<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border_login"
    android:elevation="10dp"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:background="#FFF"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/TVPuestoFotoV"
          android:layout_width="110dp"
          android:layout_height="115dp"
          android:layout_gravity="center"
          android:layout_margin="3dp"
          android:layout_weight="0"
          android:scaleType="fitXY"
          android:src="@drawable/perfil_usuario"
          app:riv_border_color="@android:color/transparent"
          app:riv_border_width="0dip"
          app:riv_corner_radius="10dp"
          app:riv_oval="false" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
            android:layout_marginTop="5dp"
          android:layout_marginStart="13sp"
          android:orientation="vertical">



          <LinearLayout


              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="1dp"
              android:layout_marginTop="7dp"
              android:orientation="vertical">


              <TextView
                  android:id="@+id/TVProducNombre"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="Jabon Perla"
                  android:textColor="@color/col_negrosolida"
                  android:textSize="23sp"
                  android:textStyle="bold" />


          </LinearLayout>


          <LinearLayout


              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


              <TextView
                  android:id="@+id/TVProducUnidades"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="10dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_weight="1"
                  android:text="Unidades"
                  android:textColor="@color/col_grissuave"
                  android:textSize="20sp"
                   />


          </LinearLayout>


             >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                 >


                  <TextView
                      android:id="@+id/TVProducValor"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="$5.00"
                      android:textColor="@color/col_negrosolida"
                      android:textSize="22sp"
                      />


              </LinearLayout>




      </LinearLayout>

  </LinearLayout>





</LinearLayout>





</RelativeLayout>