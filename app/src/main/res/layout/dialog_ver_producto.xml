<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_redondon"
    android:padding="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center"
    android:elevation="10dp"

    >


    <ImageView
        android:id="@+id/TVFotoProductVer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="@drawable/ic_place_productos"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"

        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/TVProducNombreV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="Jabon Perla "
            android:fontFamily="@font/seguisb"
            android:maxLines="2"
            android:textColor="@color/col_negrosolida"
            android:textSize="18sp"
            />

        <TextView

            android:id="@+id/TVCategoriaV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/segoeui"
            android:maxLines="2"
            android:text="Frutas "
            android:textAlignment="textEnd"
            android:textColor="@color/col_grissuave"
            android:textSize="15sp" />


    </LinearLayout>



    <TextView
        android:id="@+id/TVCompDescripcionV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="Aqui se presenta toda la descripcion del producto seleccionado deberi verse mas opatra ver cim queda la des"
        android:textColor="@color/col_grissuave"
        android:maxLines="3"
        android:fontFamily="@font/segoeui"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Se vende por "
                android:fontFamily="@font/segoeui"
                android:textColor="@color/col_grisnuevo"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/TVUnidadMedidaP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidades"
                android:fontFamily="@font/seguisb"
                android:textAlignment="textEnd"
                android:textColor="@color/col_negrosolida"
                android:textSize="16sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio:  "
                    android:textColor="@color/col_naranja"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/TVCompSubtotalV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 14.20"
                    android:fontFamily="@font/seguisb"
                    android:textColor="@color/col_negrosolida"
                    android:textSize="22sp"
                    />


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/TVBtnEditar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@color/col_negrosolida"
                android:text="Editar"
                style="@style/Theme.AppCompat.Light.NoActionBar"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/col_White"
                android:textSize="16sp"
                >

            </Button>

            <Button
                android:id="@+id/TVBtnElimiar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@color/col_rojo"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/col_White"
                android:textSize="16sp"
                >

            </Button>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>