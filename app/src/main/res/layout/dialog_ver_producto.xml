<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@drawable/redondin"
    android:padding="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center"
    android:elevation="10dp"

    >


    <ImageView
        android:id="@+id/TVPuestoFotoV"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="@drawable/ic_place_productos"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">




        <TextView
            android:id="@+id/TVProducNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Jabon Perla "
            android:maxLines="2"
            android:textColor="@color/col_negrosolida"
            android:textSize="18sp"
            />




        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TVProducUnidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="Unidades"
                android:textAlignment="center"
                android:textColor="@color/col_grissuave"
                android:textSize="15sp"
                />








            <TextView
                android:id="@+id/TVProducValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="$5.00"
                android:textColor="@color/col_negrosolida"
                android:textSize="17sp" />

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="DescripciÃ³n"
        android:textColor="@color/col_grissuave"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVCompDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:text="Aqui se presenta toda la descripcion del producto seleccionado deberi verse mas opatra ver cim queda la des"
        android:textColor="@color/col_grissuave"
        android:maxLines="3"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:layout_height="match_parent">


        <TextView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Cantidad"
            android:textColor="@color/col_grissuave"
            android:textSize="18sp"
            android:textStyle="bold"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Se vende por "
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/col_gris"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidades"
                android:textAlignment="textEnd"
                android:layout_marginBottom="5dp"
                android:textColor="@color/col_negrosolida"
                android:textSize="16sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:  "
                    android:textColor="@color/col_naranja"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/TVCompSubtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 14.20"
                    android:textColor="@color/col_negrosolida"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@color/col_negrosolida"
                android:text="Editar"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/col_White"
                android:textSize="16sp"
                >

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@color/col_rojo"
                android:text="ELIMINAR"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/col_White"
                android:textSize="16sp"
                >

            </Button>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>