<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    tools:context=".view.fragments.mercado">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@color/col_White"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RelativeLayout
                android:id="@+id/superior"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/col_White"
                    android:backgroundTint="@color/col_White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <RelativeLayout
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:background="@color/col_White"
                        android:layout_height="40dp"
                        >


                        <TextView
                            android:id="@+id/NumeroPedido"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nuevo Producto"
                            android:textStyle="bold"
                            android:textColor="@color/col_negrosolida"
                            android:textSize="28sp"                            >
                        </TextView>


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/atras_detalle_pedido"
                            android:layout_width="16dp"
                            android:layout_height="17dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0"
                            android:background="@color/col_White"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_left_arrow"
                            app:riv_mutate_background="true"


                            app:riv_oval="true" />

                        <View
                            android:layout_marginTop="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/col_gris"
                            >

                        </View>

                    </RelativeLayout>

                </LinearLayout>



            </RelativeLayout>
        </RelativeLayout>


<RelativeLayout
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/border_dashed"
    android:orientation="vertical"
    android:layout_height="135dp">

    <ImageView
        android:visibility="gone"
        android:src="@drawable/perfil_mercado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/NP_Esconder"
        android:visibility="visible"

        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_place_productos"
            android:layout_height="60dp">

        </ImageView>
        <TextView
            android:text="Subir una Imagen"
            android:textSize="18sp"
            android:textColor="@color/col_gris"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </TextView>


    </LinearLayout>



</RelativeLayout>
<LinearLayout
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:theme="@style/TextInputLayoutHint"
        android:visibility="visible"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/geo"
            android:gravity="left"
            android:hint="Nombre"
            android:maxLines="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/col_negro"
            android:textColorHint="@color/col_naranja" />


    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TextInputLayoutHint"
            android:visibility="visible"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geo"
                android:gravity="left"
                android:hint="Precio"
                android:maxLines="1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="@color/col_negro"
                android:textColorHint="@color/col_naranja" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TextInputLayoutHint"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:entries="@array/Roles"
                android:fontFamily="@font/geo"
                android:textAlignment="center"
                android:textColor="@color/col_negro"
                android:textColorHint="@color/col_naranja"
                android:textSize="12sp"
                android:textStyle="bold"></Spinner>


        </com.google.android.material.textfield.TextInputLayout>




    </LinearLayout>


    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/geo"
        android:textAlignment="center"
        android:textColor="@color/col_negro"
        android:textColorHint="@color/col_naranja"
        android:textSize="12sp"
        android:textStyle="bold"></Spinner>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:theme="@style/TextInputLayoutHint"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/geo"
            android:gravity="left"
            android:hint="DescripciÃ³n"
            android:maxLines="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/col_negro"
            android:textColorHint="@color/col_naranja" />


    </com.google.android.material.textfield.TextInputLayout>


    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_boton"
        >
        <Button

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:text="Continuar"
            android:textColor="@color/col_White"
            android:textSize="8dp"
            android:textStyle="bold"

            >



        </Button>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continuar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"

            android:textSize="15sp"
            android:textColor="@color/col_White"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:background="@color/col_naranja"
            >
        </TextView>


    </RelativeLayout>
</LinearLayout>


    </LinearLayout>



</RelativeLayout>