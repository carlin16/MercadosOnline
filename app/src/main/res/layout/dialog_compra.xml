<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/redondin"
    android:layout_gravity="center"
    android:elevation="10dp"

    >


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/TVPuestoFotoV"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:scaleType="fitXY"
            android:src="@drawable/perfil_usuario"
            app:riv_border_color="@android:color/transparent"
            app:riv_border_width="0dip"
            app:riv_corner_radius="10dp"
            app:riv_oval="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVProducNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jabon Perla QUe debe ser el mas larfgo que puede exist ir b"
                    android:maxLines="2"
                    android:textColor="@color/col_negrosolida"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/TVProducUnidades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Unidades"
                    android:textColor="@color/col_grissuave"
                    android:textSize="15sp"
                    />


            </LinearLayout>


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/TVProducValor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:text="$5.00"
                    android:textColor="@color/col_negrosolida"
                    android:textSize="17sp" />


            </LinearLayout>




        </LinearLayout>



    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@color/col_gris"
    android:layout_height="2dp">

</View>


    <TextView
        android:layout_marginTop="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:layout_gravity="center"
        android:textColor="@color/col_negro"
        android:fontFamily="@font/pesta1"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVCompDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Aqui se presenta toda la descripcion del producto seleccionado deberi verse mas opatra ver cim queda la des"
        android:textColor="@color/col_grissuave"
        android:maxLines="3"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:gravity="center"
            android:textColor="@color/col_grissuave"
            android:textStyle="bold"
            android:fontFamily="@font/pesta1"
            android:textSize="21sp"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_login"
                >



                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/TVCompCantidad"
                    android:layout_width="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    app:backGroundColor="@color/col_White"
                    app:textColor="@color/col_grissuave"
                    app:textSize="8sp"

                    >

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </RelativeLayout>        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal:  "
                android:textColor="@color/col_naranja"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/TVCompSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 14.20"
                android:textColor="@color/col_negrosolida"
                android:textSize="25sp"
                />


        </LinearLayout>


    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/TVCompBtnAgregarCar"
            android:layout_width="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="35dp"
            android:background="@color/col_negrosolida"
            android:text="Agregar al carrito"
            android:layout_marginTop="10dp"
            android:textColor="@color/col_White"
            android:padding="10dp"
            android:textSize="12sp"
            >
        </Button>
    </RelativeLayout>

    </LinearLayout>


