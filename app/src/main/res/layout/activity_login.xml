<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercados Online"
            android:textColor="#7e7e7c"
            android:textSize="12sp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar SesiÃ³n"
            android:textColor="#1D1C1A"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILoginUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/TextInputLayoutHint"
            android:visibility="visible"
            >


            <EditText
                android:id="@+id/LoginUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geo"
                android:gravity="left"
                android:hint="Usuario"
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#1D1C1A"
                android:textColorHint="#EE8813" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILoginPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/siguiente_login_kt"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pesta1"
            android:theme="@style/TextLabel"            android:visibility="visible">


            <in.anshul.libray.PasswordEditText
                android:id="@+id/LoginPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:hint="Password"
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"

                android:singleLine="true"
                android:textColor="#1D1C1A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColorHint="#EE8813" />


        </com.google.android.material.textfield.TextInputLayout>


        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_ingresar_login"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_ingresar"
            android:text="Ingresar"
            android:textColor="#fff"
            android:visibility="visible"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="4dp"
            app:spinning_bar_width="4dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Aun no estas registrado"
            android:textColor="#1D1C1A"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/registrarme_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/Registrarse"
            android:textColor="#f19f43"
            android:textSize="16sp"
            android:textStyle="bold"
            ></TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>