<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    >



    <com.github.florent37.shapeofview.shapes.CutCornerView

        android:id="@+id/clipCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:shape_cutCorner_topRightSize="10dp"
        app:shape_cutCorner_bottomLeftSize="10dp"
        app:shape_cutCorner_topLeftSize="10dp"
        app:shape_cutCorner_bottomRightSize="10dp">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/multi_foto"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/perfil_mercado" />

            <TextView
                android:id="@+id/multi_nombre"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:maxLines="2"
                android:minLines="2"
                android:textSize="10sp"
                android:text="Durable Marble Keyboard">


            </TextView>

        </LinearLayout>

        <!-- YOUR CONTENT -->

    </com.github.florent37.shapeofview.shapes.CutCornerView>






</RelativeLayout>