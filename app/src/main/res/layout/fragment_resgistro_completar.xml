<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercados Online"
            android:textColor="#7e7e7c"
            android:textSize="12sp"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="#1D1C1A"
            android:textSize="25sp"

            android:textStyle="bold"></TextView
            >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/registro_perfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/adduser"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"

            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/txtRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geo"
                android:textAlignment="center"
                android:text="Soy"
                android:padding="10dp"
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:inputType="text"


                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#1D1C1A"
                android:textColorHint="#EE8813"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:layout_weight="1"
                android:id="@+id/spn_rolUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geo"
                android:layout_marginStart="8dp"
                android:textAlignment="center"
                android:layout_marginEnd="8dp"
                android:entries="@array/Roles"
                android:textColor="#1D1C1A"
                android:textColorHint="#EE8813"
                android:textSize="12sp"
                android:textStyle="bold"
                ></Spinner>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/TextInputLayoutHint"
            android:visibility="visible">


            <EditText
                android:id="@+id/registro_direccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geo"
                android:gravity="left"
                android:hint="Direccion"
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="#1D1C1A"
                android:textColorHint="#EE8813"
                android:textSize="14sp"
                android:textStyle="bold" />


        </com.google.android.material.textfield.TextInputLayout>

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_registro2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_ingresar"
            android:text="Registrarse"
            android:textColor="#fff"
            android:visibility="visible"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="4dp"
            app:spinning_bar_width="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Ya estas registrado"
            android:textColor="#1D1C1A"
            android:textSize="15sp"></TextView>


        <TextView
            android:id="@+id/ir_login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/IniciarSesion"
            android:textColor="#f19f43"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>