<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_login"
    >



                <LinearLayout
                    android:background="#FFF"
                    android:padding="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/TVCompFoto"
                            android:layout_width="125dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/placeholder_perfil"
                            app:riv_border_color="@android:color/transparent"
                            app:riv_border_width="0dip"
                            app:riv_corner_radius="10dp"
                            app:riv_oval="false" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="13sp"
                            android:orientation="vertical">



                            <LinearLayout


                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="1dp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/TVCompProducto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Jabon Perla"
                                    android:textColor="@color/col_negrosolida"
                                    android:textSize="23sp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <LinearLayout


                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/TVCompUnidades"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:text="Unidades"
                                    android:textColor="@color/col_grissuave"
                                    android:textSize="20sp"
                                    />


                            </LinearLayout>


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >


                                <TextView
                                    android:id="@+id/TVProducValor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hogar"
                                    android:textColor="@color/col_grissuave"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>





                </LinearLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n:"
            android:textColor="@color/col_grissuave"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVCompDescripcion"
            android:layout_marginTop="12dp"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aqui se presenta toda la descripcion del producto seleccionado"
            android:textColor="@color/col_grissuave"
            android:textSize="18sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Cantidad"
                    android:gravity="center"
                    android:textColor="@color/col_grissuave"
                    android:textStyle="bold"
                    android:textSize="21sp"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/border_login"
                        >

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:padding="10dp"
                            app:backGroundColor="@color/col_White"
                            app:textColor="@color/col_grissuave"
                            app:textSize="8sp"
                            app:initialNumber="1"

                            >

                        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subtotal:  "
                        android:textColor="@color/col_naranja"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/TVCompSubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 14.20"
                        android:textColor="@color/col_negrosolida"
                        android:textSize="25sp"
                        />


                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/col_negrosolida"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="Agregar al carrito"
                    android:textColor="@color/col_White"
                    android:textSize="18sp"
                    >

                </Button>
        </LinearLayout>






</LinearLayout>