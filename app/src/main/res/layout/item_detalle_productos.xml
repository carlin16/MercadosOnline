<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:background="#FFF"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/Contenedor_EliminarDetallePro"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/eliminarDetalleProducto"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_eliminar"
                    android:textColor="@color/col_White"></de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>


            <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="5dp"

            >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/DPNombrePro"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carne de res"
                        android:textColor="@color/col_grissuave"
                        android:textStyle="bold"
                        android:textSize="20sp"

                        ></TextView>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">






                    </RelativeLayout>



                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/DPUnidadMedida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Libra"
                    android:textColor="@color/col_grissuave"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:layout_weight="1"

                    ></TextView>



                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/quitarProducto"
                            android:layout_weight="1"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menos"
                            android:textAlignment="center"
                            android:textColor="@color/col_White"></de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/DPCantidadPro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="478"
                            android:textAlignment="center"
                            android:textColor="@color/col_grissuave"
                            android:textSize="20sp"
                            android:textStyle="bold"></TextView>



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/agregarProducto"
                            android:layout_weight="1"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_mas"
                            android:textAlignment="center"
                            android:textColor="@color/col_White"></de.hdodenhof.circleimageview.CircleImageView>



                    </LinearLayout>




                <TextView
                    android:id="@+id/DPSubtotalProduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$15.50"
                    android:textColor="@color/col_grissuave"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"

                    ></TextView>


            </LinearLayout>




        </LinearLayout>







        </LinearLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/col_gris"
            >

        </View>

    </LinearLayout>





</RelativeLayout>