<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="20dp"
    android:background="@drawable/border_redondon"
    android:layout_gravity="center"
    android:elevation="10dp"

    >





    <TextView
        android:id="@+id/TVNumContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Número de contacto"
        android:textStyle="bold"
        android:textColor="@color/col_negrosolida"
        android:maxLines="3"
        android:fontFamily="@font/segoeui"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal">
        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:id="@+id/CCPTiendaNueva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            app:ccp_countryPreference="US,EC,ME,CO,PE"

            app:ccp_defaultCode="593"
            app:ccp_defaultNameCode="EC" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TITelefonoNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutHint">


            <EditText
                android:id="@+id/ETTelLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:fontFamily="@font/segoeui"
                android:hint="Teléfono"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColorHint="@color/col_negro"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/TVTituoUbica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Ubicación"
        android:textStyle="bold"
        android:textColor="@color/col_negrosolida"
        android:maxLines="3"
        android:fontFamily="@font/segoeui"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/TVCompDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Aqui va la ubicacion "
        android:textColor="@color/col_grissuave"
        android:maxLines="3"
        android:fontFamily="@font/segoeui"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo envío:  "
            android:textColor="@color/col_naranja"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/TVCompSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 14.20"
            android:textColor="@color/col_negrosolida"
            android:textSize="20sp"
            />


    </LinearLayout>

    <Button

        android:id="@+id/TVCompBtnAgregarCar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/col_negrosolida"
        android:text="Notificar transportista"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/col_White"
        android:padding="10dp"
        android:textSize="14sp"
        >
    </Button>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_wasap"
        android:layout_gravity="center"

        >

    </ImageView>

</LinearLayout>


