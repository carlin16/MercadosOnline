<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_margin="1dp"
        android:id="@+id/contenido"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_slide"
            android:elevation="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardElevation="2dp"

            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">
                    <ImageView
                        android:id="@+id/mercado_portada"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/portada_mercado"
                        >
                    </ImageView>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/mercado_perfil"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/perfil_mercado"
                        android:layout_alignParentBottom="true"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#fff"

                        />



                    <TextView
                        android:id="@+id/mercado_nombre"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_overlay"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Tienda esta aqui y se va viendo de esta manera"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/mercado_perfil"
                        android:layout_alignParentBottom="true"

                        >


                    </TextView>

                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/busqueda_cate"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/header"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="20dp"
                        android:src="@drawable/ubicacion_v3"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciudad     "
                        android:textColor="#7C7979"
                        android:layout_marginHorizontal="4dp"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/mercado_ciudad"
                        android:layout_width="match_parent"
                        android:maxLines="3"
                        android:textAlignment="center"
                        android:text="Categoria"
                        android:textColor="#686464"
                        android:textStyle="bold"

                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/busqueda_sub"
                    android:layout_below="@+id/busqueda_cate"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginVertical="2dp"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="20dp"
                        android:src="@drawable/ubicacion_v3"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion "
                        android:textColor="#7C7979"
                        android:layout_marginHorizontal="4dp"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/mercado_direccion"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:maxLines="3"
                        android:layout_height="wrap_content"
                        android:text="Subcategoria"
                        android:textColor="#686464"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"/>

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/busqueda_sub"
                    android:id="@+id/mercado_descrip"
                    android:layout_width="wrap_content"
                    android:text="Descripcion"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_below="@+id/mercado_descrip"
                    android:id="@+id/mercado_descripcion"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:text="Descripcion de todo lo que podria tener la tienda"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                </TextView>


                <View
                    android:layout_below="@+id/mercado_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </View>
            </RelativeLayout>




        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>